<includes>
    <include name="Viewtype_LauncherSquare">
        <control type="group" id="600">
            <visible>Control.IsVisible(516)</visible>
            <description>Onright conditions</description>
            <posy>-200</posy>
            <control type="button">
                <description>Scrollbar disabled</description>
                <onfocus>SetFocus(516)</onfocus>
                <visible>!Skin.HasSetting(Launchers_Show_Scrollbar)</visible>
            </control>
            <control type="button">
                <description>Scrollbar enabled</description>
                <onfocus>SetFocus(60)</onfocus>
                <visible>Skin.HasSetting(Launchers_Show_Scrollbar)</visible>
            </control>
        </control>
        <control type="group">
            <visible>Control.IsVisible(516)</visible>
            <include>VisibleFadeEffect</include>
            <posx>450</posx>
            <posy>0</posy>
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>880</width>
                <height>720</height>
                <aspectratio>stretch</aspectratio>
                <aligny>center</aligny>
                <texture>special://skin/media/white.png</texture>
                <colordiffuse>55000000</colordiffuse>
            </control>
            <control type="panel" id="516">
                <visible>Window.IsActive(1)</visible>
                <posx>73</posx>
                <posy>100</posy>
                <width>748</width>
                <height>560</height>
                <onleft>9000</onleft>
                <onright>600</onright>
                <onup>516</onup>
                <ondown>516</ondown>
                <scrolltime>0</scrolltime>
                <pagecontrol>60</pagecontrol>
                <viewtype label="LauncherSquare">list</viewtype>
                <orientation>vertical</orientation>
                <itemlayout height="140" width="140">
                    <control type="image">
                        <posx>4</posx>
                        <posy>3</posy>
                        <width>116</width>
                        <height>116</height>
                        <aspectratio>stretch</aspectratio>
                        <texture diffuse="special://skin/media/episodematte.png">$INFO[ListItem.Icon]</texture>
                        <colordiffuse>88ffffff</colordiffuse>
                    </control>
                </itemlayout>
                <focusedlayout height="140" width="140">
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>120</width>
                        <height>120</height>
                        <aspectratio>stretch</aspectratio>
                        <texture>special://skin/media/episodeframe.png</texture>
                        <colordiffuse>ff00b8f5</colordiffuse>
                        <animation effect="zoom" center="auto" start="50" end="120" time="400" reversible="false" tween="back" easing="out">Focus</animation>
                    </control>
                    <control type="image">
                        <posx>4</posx>
                        <posy>3</posy>
                        <width>116</width>
                        <height>116</height>
                        <aspectratio>stretch</aspectratio>
                        <texture diffuse="special://skin/media/episodematte.png">$INFO[ListItem.Icon]</texture>
                        <animation effect="zoom" center="auto" start="50" end="120" time="400" reversible="false" tween="back" easing="out">Focus</animation>
                    </control>
                </focusedlayout>
            </control>
        </control>
        <control type="scrollbar" id="60">
            <posx>15r</posx>
            <posy>100</posy>
            <width>5</width>
            <height>560</height>
            <texturesliderbackground>special://skin/media/scrollbar_vertical_background.png</texturesliderbackground>
            <texturesliderbar>special://skin/media/scrollbar_vertical_bar.png</texturesliderbar>
            <texturesliderbarfocus>special://skin/media/scrollbar_vertical_bar_focus.png</texturesliderbarfocus>
            <onleft>516</onleft>
            <onright>9000</onright>
            <showonepage>true</showonepage>
            <orientation>vertical</orientation>
            <visible allowhiddenfocus="true">Control.IsVisible(516) + Control.HasFocus(60) + Skin.HasSetting(Launchers_Show_Scrollbar)</visible>
        </control>
        <include>Launcher_Left_bar</include>
    </include>
</includes>
