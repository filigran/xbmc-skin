<includes>
    <include name="Viewtype_LauncherTall">
        <control type="group">
            <visible>Control.IsVisible(518)</visible>
            <include>VisibleFadeEffect</include>
            <posx>450</posx>
            <posy>0</posy>
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>880</width>
                <height>720</height>
                <aspectratio>stretch</aspectratio>
                <aligny>center</aligny>
                <texture>special://skin/media/white.png</texture>
                <colordiffuse>55000000</colordiffuse>
            </control>
            <control type="panel" id="518">
                <visible>Window.IsActive(1)</visible>
                <posx>67</posx>
                <posy>100</posy>
                <width>748</width>
                <height>594</height>
                <onleft>9000</onleft>
                <onright>60</onright>
                <onup>518</onup>
                <ondown>518</ondown>
                <scrolltime>0</scrolltime>
                <pagecontrol>63</pagecontrol>
                <viewtype label="LauncherTall">list</viewtype>
                <orientation>vertical</orientation>
                <itemlayout height="198" width="144">
                    <control type="image">
                        <posx>4</posx>
                        <posy>3</posy>
                        <width>116</width>
                        <height>172</height>
                        <aspectratio>stretch</aspectratio>
                        <texture diffuse="special://skin/media/episodematte.png">$INFO[ListItem.Icon]</texture>
                        <colordiffuse>88ffffff</colordiffuse>
                    </control>
                </itemlayout>
                <focusedlayout height="198" width="144">
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>124</width>
                        <height>178</height>
                        <aspectratio>stretch</aspectratio>
                        <texture>special://skin/media/episodeframe.png</texture>
                        <colordiffuse>ff00b8f5</colordiffuse>
                        <animation effect="zoom" center="auto" start="50" end="120" time="400" reversible="false" tween="back" easing="out">Focus</animation>
                    </control>
                    <control type="image">
                        <posx>4</posx>
                        <posy>3</posy>
                        <width>116</width>
                        <height>172</height>
                        <aspectratio>stretch</aspectratio>
                        <texture diffuse="special://skin/media/episodematte.png">$INFO[ListItem.Icon]</texture>
                        <animation effect="zoom" center="auto" start="50" end="120" time="400" reversible="false" tween="back" easing="out">Focus</animation>
                    </control>
                </focusedlayout>
            </control>
        </control>
        <control type="scrollbar" id="63">
            <posx>15r</posx>
            <posy>100</posy>
            <width>5</width>
            <height>560</height>
            <texturesliderbackground>special://skin/media/scrollbar_vertical_background.png</texturesliderbackground>
            <texturesliderbar>special://skin/media/scrollbar_vertical_bar.png</texturesliderbar>
            <texturesliderbarfocus>special://skin/media/scrollbar_vertical_bar_focus.png</texturesliderbarfocus>
            <onleft>518</onleft>
            <onright>9000</onright>
            <showonepage>true</showonepage>
            <orientation>vertical</orientation>
            <visible allowhiddenfocus="true">Control.IsVisible(518) + Control.HasFocus(63)</visible>
        </control>
        <include>Launcher_Left_bar</include>
    </include>
</includes>
