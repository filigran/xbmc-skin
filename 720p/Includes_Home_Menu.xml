    <include name="Home_Icons">
        <control type="image">
            <description>Menu icon centered</description>
            <posx>512</posx>
            <posy>-266</posy>
            <width>256</width>
            <height>256</height>
            <texture>$INFO[Container(300).ListItem.ActualIcon]</texture>
            <!-- FRÅGA: Hur göra för att inte bilden ska synas precis i början, rätt typ av animation alltså. -->
            <animation effect="zoom" center="auto" tween="back" easing="out" time="400" start="50" end="100" reversible="false" condition="!Container(300).OnNext + !Container(300).OnPrevious">conditional</animation>
            <visible>!Skin.HasSetting(Home_Hide_Icons) + !Skin.HasSetting(Home_Left_Icons) + !Skin.HasSetting(Home_Right_Icons)</visible>
        </control>
        <control type="image">
            <description>Menu icon to the right</description>
            <posx>702</posx>
            <posy>-78</posy>
            <width>256</width>
            <height>256</height>
            <texture>$INFO[Container(300).ListItem.ActualIcon]</texture>
            <!-- FRÅGA: Hur göra för att inte bilden ska synas precis i början, rätt typ av animation alltså. -->
            <animation effect="zoom" center="auto" tween="back" easing="out" time="400" start="50" end="100" reversible="false" condition="!Container(300).OnNext + !Container(300).OnPrevious">conditional</animation>
            <visible>!Skin.HasSetting(Home_Hide_Icons) + Skin.HasSetting(Home_Right_Icons)</visible>
        </control>
        <control type="image">
            <description>Menu icon to the left</description>
            <posx>352</posx>
            <posy>-78</posy>
            <width>256</width>
            <height>256</height>
            <texture>$INFO[Container(300).ListItem.ActualIcon]</texture>
            <!-- FRÅGA: Hur göra för att inte bilden ska synas precis i början, rätt typ av animation alltså. -->
            <animation effect="zoom" center="auto" tween="back" easing="out" time="400" start="50" end="100" reversible="false" condition="!Container(300).OnNext + !Container(300).OnPrevious">conditional</animation>
            <visible>!Skin.HasSetting(Home_Hide_Icons) + Skin.HasSetting(Home_Left_Icons)</visible>
        </control>
    </include>
    <include name="Home_Menu">
        <control type="group">
            <posx>0</posx>
            <include>Home_Onup_Ondown</include>
            <include condition="Skin.HasSetting(Home_Semi_Centered_Menu)">Home_Centered_posy460</include>
            <include condition="Skin.HasSetting(Home_Centered_Menu)">Home_Centered_posy310</include>
            <include condition="Skin.HasSetting(Home_Bottom_Menu) + System.GetBool(lookandfeel.enablerssfeeds)">Home_Bottom_posy133r</include>
            <include condition="Skin.HasSetting(Home_Bottom_Menu) + !System.GetBool(lookandfeel.enablerssfeeds)">Home_Bottom_posy100r</include>
            <animation effect="slide" start="0,800" end="0,0" tween="back" easing="out" time="400">WindowOpen</animation>
            <animation effect="slide" start="0,0" end="0,800" tween="back" easing="out" time="400">WindowClose</animation>
            <include>Home_Backgrounds</include>
            <control type="wraplist" id="300">
                <posy>0</posy>
                <height>100</height>
                <onleft>300</onleft>
                <onright>300</onright>
                <onup>900</onup>
                <ondown>901</ondown>
                <viewtype>list</viewtype>
                <orientation>horizontal</orientation>
                <focusposition>2</focusposition>
                <scrolltime>200</scrolltime>
                <include condition="Skin.HasSetting(Home_Left_Icons)">Home_Labels_Left_Icons</include>
                <include condition="Skin.HasSetting(Home_Right_Icons)">Home_Labels_Right_Icons</include>
                <include condition="!Skin.HasSetting(Home_Left_Icons) + !Skin.HasSetting(Home_Right_Icons)">Home_Labels_Centered_Icons</include>
                <include>Home_Content</include>
            </control>
            <include>Home_Icons</include>
        </control>
    </include>
</includes>
