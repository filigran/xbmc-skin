<includes>
    <include name="BobEpisodes_listcontent">
        <visible>Container.Content(Episodes)</visible>
        <posx>-30</posx>
        <posy>25</posy>
        <width>1441</width>
        <height>720</height>
        <onup>9000</onup>
        <ondown>60</ondown>
        <pagecontrol>60</pagecontrol>
        <scrolltime>200</scrolltime>
        <focusposition>2</focusposition>
        <orientation>horizontal</orientation>
        <preloaditems>4</preloaditems>
        <itemlayout width="249">
            <control type="image">
                <posx>0</posx>
                <posy>30</posy>
                <width>229</width>
                <height>129</height>
                <texture background="true" diffuse="special://skin/media/episodematte.png">$INFO[ListItem.Icon]</texture>
                <colordiffuse>99ffffff</colordiffuse>
                <aspectratio scalediffuse="false">stretch</aspectratio>
            </control>
            <control type="image">
                <posx>200</posx>
                <posy>135</posy>
                <width>40</width>
                <height>40</height>
                <aspectratio>stretch</aspectratio>
                <texture background="true">special://skin/media/$INFO[ListItem.Overlay]</texture>
                <colordiffuse>9900ff00</colordiffuse>
            </control>
        </itemlayout>
        <focusedlayout width="354">
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>334</width>
                <height>188</height>
                <texture>special://skin/media/episodematte.png</texture>
                <colordiffuse>ff00B8F5</colordiffuse>
                <animation tween="back" reversible="false" effect="zoom" center="auto" start="60" end="100" time="400" condition="Control.HasFocus(60) | Control.HasFocus(600) | ControlGroup(9000).HasFocus">conditional</animation>
                <animation tween="back" reversible="false" effect="zoom" center="auto" start="60" end="100" time="400">focus</animation>
            </control>
            <control type="image">
                <posx>4</posx>
                <posy>4</posy>
                <width>326</width>
                <height>180</height>
                <texture background="true" diffuse="special://skin/media/episodematte.png">$INFO[ListItem.Icon]</texture>
                <aspectratio scalediffuse="false">stretch</aspectratio>
                <animation tween="back" reversible="false" effect="zoom" center="auto" start="60" end="100" time="400" condition="Control.HasFocus(60) | Control.HasFocus(600) | ControlGroup(9000).HasFocus">conditional</animation>
                <animation tween="back" reversible="false" effect="zoom" center="auto" start="60" end="100" time="400">focus</animation>
            </control>
            <control type="image">
                <posx>290</posx>
                <posy>150</posy>
                <width>60</width>
                <height>60</height>
                <aspectratio>stretch</aspectratio>
                <texture background="true">special://skin/media/$INFO[ListItem.Overlay]</texture>
                <colordiffuse>ff00ff00</colordiffuse>
                <animation tween="back" reversible="false" effect="zoom" center="0,0" start="60" end="100" time="400" condition="Control.HasFocus(60) | Control.HasFocus(600) | ControlGroup(9000).HasFocus">conditional</animation>
                <animation tween="back" reversible="false" effect="zoom" center="0,0" start="60" end="100" time="400">focus</animation>
            </control>
        </focusedlayout>
    </include>
    <include name="Viewtype_BobEpisodes">
        <control type="group">
            <visible>Control.IsVisible(505) | Control.IsVisible(511)</visible>
            <animation reversible="false" effect="slide" start="0,0" end="0,357" tween="back" easing="out" time="400" condition="[Container.Content(Episodes) + Skin.HasSetting(Episodes_Bob_Thumbs_Bottom)]">conditional</animation>
            <animation reversible="false" effect="slide" start="0,357" end="0,0" tween="back" easing="out" time="400" condition="[Container.Content(Episodes) + !Skin.HasSetting(Episodes_Bob_Thumbs_Bottom)]">conditional</animation>
            <animation reversible="false" effect="slide" start="0,0" end="0,-31" tween="back" easing="out" time="400" condition="System.GetBool(lookandfeel.enablerssfeeds)">conditional</animation>
            <include>VisibleFadeEffect</include>
            <posx>0</posx>
            <posy>120</posy>
            <control type="image">
                <description>List background</description>
                <posx>0</posx>
                <posy>0</posy>
                <width>1280</width>
                <height>241</height>
                <texture>special://skin/media/white.png</texture>
                <colordiffuse>55000000</colordiffuse>
            </control>
            <control type="wraplist" id="505">
                <onleft>505</onleft>
                <onright>505</onright>
                <include>BobEpisodes_listcontent</include>
                <viewtype label="BobEpisodesWrap">bigwrap</viewtype>
            </control>
            <control type="fixedlist" id="511">
                <onleft>511</onleft>
                <onright>511</onright>
                <include>BobEpisodes_listcontent</include>
                <viewtype label="BobEpisodesFixed">bigwrap</viewtype>
            </control>
            <control type="scrollbar" id="60">
                <posx>200</posx>
                <posy>265</posy>
                <width>880</width>
                <height>5</height>
                <texturesliderbackground>special://skin/media/scrollbar_horizontal_background.png</texturesliderbackground>
                <texturesliderbar>special://skin/media/scrollbar_horizontal_bar.png</texturesliderbar>
                <texturesliderbarfocus>special://skin/media/scrollbar_horizontal_bar_focus.png</texturesliderbarfocus>
                <onup>500</onup>
                <ondown>600</ondown>
                <showonepage>false</showonepage>
                <orientation>horizontal</orientation>
                <visible allowhiddenfocus="true">Control.HasFocus(60)</visible>
            </control>
        </control>
        <control type="group">
            <visible>Control.IsVisible(505) | Control.IsVisible(511)</visible>
            <include>VideoLibrary_bottom_info</include>
        </control>
    </include>
</includes>
