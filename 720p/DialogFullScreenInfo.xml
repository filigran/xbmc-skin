<window type="dialog" id="142">
	<defaultcontrol always="true">600</defaultcontrol>
    <coordinates>
		<system>1</system>
		<posx>0</posx>
		<posy>357</posy>
	</coordinates>
    <controls>
        <control type="group">
            <posx>512</posx>
            <posy>-177</posy>
            <include>OSD_Control_images</include>
            <visible>!Window.IsTopMost(VideoOSD)</visible>
        </control>
        <control type="group">
            <visible>Window.IsActive(fullscreenvideo) + !Window.IsActive(videoosd)</visible>
            <animation effect="slide" start="0,357" end="0,0" time="300">WindowOpen</animation>
            <animation effect="slide" start="0,0" end="0,357" time="300">WindowClose</animation>
            <animation effect="slide" start="0,0" end="0,357" time="300">hidden</animation>
            <animation effect="slide" start="0,357" end="0,0" time="300">visible</animation>
            <control type="image">
				<description>Background image</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>1280</width>
				<height>273</height>
				<texture>white.png</texture>
                <colordiffuse>88000000</colordiffuse>
			</control>
            <control type="image">
				<description>Non Movie cover image</description>
				<posx>10</posx>
				<posy>0</posy>
				<width>340</width>
				<height>260</height>
				<fadetime>200</fadetime>
				<texture background="true">$INFO[VideoPlayer.Cover]</texture>
				<aspectratio aligny="bottom">keep</aspectratio>
				<bordertexture border="8">ThumbShadow.png</bordertexture>
				<bordersize>8</bordersize>
				<visible>!VideoPlayer.Content(Movies)</visible>
			</control>
            <control type="group">
                <posx>30</posx>
                <posy>10</posy>
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>170</width>
                    <height>253</height>
                    <texture>special://skin/media/posterframe.png</texture>
                    <colordiffuse>ff00B8F5</colordiffuse>
                    <visible>VideoPlayer.Content(Movies)</visible>
                </control>
                <control type="image">
                    <posx>3</posx>
                    <posy>3</posy>
                    <width>164</width>
                    <height>247</height>
                    <texture background="true" diffuse="postermatte.png">$INFO[VideoPlayer.Cover]</texture>
                    <aspectratio scalediffuse="false">stretch</aspectratio>
                    <visible>VideoPlayer.Content(Movies)</visible>
                </control>
            </control>
            <control type="group">
				<posx>230</posx>
				<posy>20</posy>
				<control type="label">
					<posx>10</posx>
					<posy>35</posy>
					<width>880</width>
					<height>30</height>
					<label>$INFO[VideoPlayer.TVShowTitle] - ($INFO[VideoPlayer.Season]$INFO[VideoPlayer.Episode,x])</label>
					<align>left</align>
					<aligny>center</aligny>
					<font>font13</font>
					<textcolor>grey</textcolor>
					<shadowcolor>black</shadowcolor>
					<visible>VideoPlayer.Content(Episodes)</visible>
				</control>
				<control type="label">
					<posx>10</posx>
					<posy>35</posy>
					<width>880</width>
					<height>30</height>
					<label>$INFO[VideoPlayer.Artist]$INFO[VideoPlayer.Album, - ]</label>
					<align>left</align>
					<aligny>center</aligny>
					<font>font13</font>
					<textcolor>grey</textcolor>
					<shadowcolor>black</shadowcolor>
					<visible>VideoPlayer.Content(MusicVideos)</visible>
				</control>
				<control type="label">
                    <description>Title</description>
					<posx>0</posx>
					<posy>0</posy>
					<width>880</width>
					<height>30</height>
					<label>$INFO[VideoPlayer.Title]</label>
					<scroll>true</scroll>
					<align>left</align>
					<aligny>center</aligny>
					<font>Font_Movie_Title</font>
					<textcolor>white</textcolor>
				</control>
                <control type="label">
                    <description>Year</description>
					<posx>0</posx>
					<posy>35</posy>
					<width>880</width>
					<height>30</height>
					<label>$INFO[VideoPlayer.Year]</label>
					<scroll>true</scroll>
					<align>left</align>
					<aligny>center</aligny>
					<font>Font_Movie_Plot</font>
					<textcolor>blue</textcolor>
				</control>
                <control type="textbox">
                    <description>Plot</description>
                    <posx>0</posx>
                    <posy>70</posy>
                    <width>700</width>
                    <height>170</height>
                    <font>Font_Movie_Plot</font>
                    <align>justify</align>
                    <textcolor>white</textcolor>
                    <label>$INFO[VideoPlayer.Plot]</label>
                    <pagecontrol>600</pagecontrol>
                    <autoscroll time="2000" delay="3000" repeat="5000">[Container.Content(Movies) + Skin.HasSetting(Movies_Autoscroll_plot)] | [Container.Content(TVShows) + Skin.HasSetting(TVShows_Autoscroll_plot)] | [Container.Content(Episodes) + Skin.HasSetting(Episodes_Autoscroll_plot)]</autoscroll>
                </control>
                <control type="scrollbar" id="600">
                    <description>Plot scrollbar</description>
                    <posx>710</posx>
                    <posy>70</posy>
                    <width>5</width>
                    <height>170</height>
                    <texturesliderbackground>special://skin/media/scrollbar_vertical_background.png</texturesliderbackground>
                    <texturesliderbar>special://skin/media/scrollbar_vertical_bar.png</texturesliderbar>
                    <texturesliderbarfocus>special://skin/media/scrollbar_vertical_bar_focus.png</texturesliderbarfocus>
                    <onleft>905</onleft>
                    <onright>905</onright>
                    <showonepage>true</showonepage>
                    <orientation>vertical</orientation>
                    <visible allowhiddenfocus="true">Control.HasFocus(600)</visible>
                </control>
            </control>
            <control type="grouplist">
                <description>Media Codec Flagging Images</description>
                <posx>1072</posx>
                <posy>90</posy>
                <itemgap>0</itemgap>
                <orientation>vertical</orientation>
                <control type="image">
                    <description>Video rez Image</description>
                    <width>80</width>
                    <height>40</height>
                    <aspectratio>keep</aspectratio>
                    <texture>$INFO[VideoPlayer.VideoResolution,flagging/video/,.png]</texture>
                </control>
                <control type="image">
                    <description>Common Codec Image</description>
                    <width>80</width>
                    <height>40</height>
                    <aspectratio>keep</aspectratio>
                    <texture>$INFO[VideoPlayer.VideoCodec,flagging/video/,.png]</texture>
                    <!-- Don't show if its one of the 500 divx codecs -->
                    <visible>![substring(VideoPlayer.VideoCodec,div,left) | stringcompare(VideoPlayer.VideoCodec,dx50)]</visible>
                </control>
                <control type="image">
                    <description>Divx Codec Image</description>
                    <width>80</width>
                    <height>40</height>
                    <aspectratio>keep</aspectratio>
                    <texture>flagging/video/divx.png</texture>
                    <visible>[substring(VideoPlayer.VideoCodec,div,left) | stringcompare(VideoPlayer.VideoCodec,dx50)]</visible>
                </control>
                <control type="image">
                    <description>Dolby Digital Image</description>
                    <width>80</width>
                    <height>40</height>
                    <aspectratio>keep</aspectratio>
                    <texture>flagging/audio/dolbydigital.png</texture>
                    <visible>[stringcompare(VideoPlayer.AudioCodec,ac3) + stringcompare(VideoPlayer.AudioChannels,6)]</visible>
                </control>
                <control type="image">
                    <description>Audio Codec Image</description>
                    <width>80</width>
                    <height>40</height>
                    <aspectratio>keep</aspectratio>
                    <texture>$INFO[VideoPlayer.AudioCodec,flagging/audio/,.png]</texture>
                    <!-- Don't show if I want the Dolby Digital Logo -->
                    <visible>![stringcompare(VideoPlayer.AudioCodec,ac3) + stringcompare(VideoPlayer.AudioChannels,6)]</visible>
                </control>
                <control type="image">
                    <description>Audio Channels Image</description>
                    <width>60</width>
                    <height>40</height>
                    <aspectratio>keep</aspectratio>
                    <texture>$INFO[VideoPlayer.AudioChannels,flagging/audio/,.png]</texture>
                </control>
            </control>
		</control>
	</controls>
</window>