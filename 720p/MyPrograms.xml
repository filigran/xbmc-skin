<window id="1">
    <defaultcontrol always="true">50</defaultcontrol>
    <allowoverlay>no</allowoverlay>
    <views>50,51,500,503,516,517,518,519</views>
    <controls>
        <include condition="!Window.IsActive(1)">CommonProgramsBackground</include>
        <include>CommonGamesBackground</include>
        <include>CommonMediaPlayingBackground</include>
        <control type="group">
            <include>Window_OpenClose_Animation</include>
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>1280</width>
                <height>720</height>
                <texture border="20">black-back.png</texture>
                <include>VisibleFadeEffect</include>
                <visible>Control.IsVisible(50) | Control.IsVisible(51) | Control.IsVisible(500)</visible>
            </control>
            <control type="image">
                <posx>0</posx>
                <posy>128r</posy>
                <width>1280</width>
                <height>128</height>
                <texture>floor.png</texture>
                <include>VisibleFadeEffect</include>
                <visible>Control.IsVisible(50) | Control.IsVisible(51) | Control.IsVisible(500)</visible>
            </control>
            <control type="image">
                <posx>0</posx>
                <posy>-5</posy>
                <width>1280</width>
                <height>725</height>
                <texture border="0.5.0.0">ContentPanel4.png</texture>
                <include>VisibleFadeEffect</include>
                <visible>Control.IsVisible(503)</visible>
            </control>
            <control type="group">
                <include>VisibleFadeEffect</include>
                <visible>Control.IsVisible(50)</visible>
                <control type="image">
                    <posx>50</posx>
                    <posy>60</posy>
                    <width>750</width>
                    <height>600</height>
                    <texture border="20">ContentPanel.png</texture>
                </control>
                <control type="image">
                    <posx>50</posx>
                    <posy>645</posy>
                    <width>750</width>
                    <height>600</height>
                    <aspectratio aligny="top">keep</aspectratio>
                    <texture diffuse="diffuse_mirror3.png" flipy="true" border="20">ContentPanel.png</texture>
                </control>
            </control>
            <control type="group">
                <include>VisibleFadeEffect</include>
                <visible>Control.IsVisible(51) | Control.IsVisible(500)</visible>
                <control type="image">
                    <posx>75</posx>
                    <posy>60</posy>
                    <width>1130</width>
                    <height>600</height>
                    <texture border="20">ContentPanel.png</texture>
                </control>
                <control type="image">
                    <posx>75</posx>
                    <posy>645</posy>
                    <width>1130</width>
                    <height>600</height>
                    <aspectratio aligny="top">keep</aspectratio>
                    <texture diffuse="diffuse_mirror3.png" flipy="true" border="20">ContentPanel.png</texture>
                </control>
            </control>
        </control>
        <control type="group">
            <include>Window_OpenClose_Animation</include>
            <include>CommonRootView</include> <!-- view id = 50 -->
            <include>FullWidthList</include> <!-- view id = 51 -->
            <include>ThumbnailView</include> <!-- view id = 500 -->
            <include>AddonInfoListView1</include> <!-- view id = 503 -->
            <include>Viewtype_LauncherSquare</include> <!-- view id = 516 -->
            <include>Viewtype_LauncherWide</include> <!-- view id = 517 -->
            <include>Viewtype_LauncherTall</include> <!-- view id = 518 -->
            <include>Viewtype_LauncherLogo</include> <!-- view id = 519 -->
        </control>
        <include condition="!Window.IsVisible(1)">CommonPageCount</include>
        <include>BehindDialogFadeOut</include>
        <include>ScrollOffsetLabel</include>
        <include>Global_ContextOverlay</include>
        <include condition="Window.IsVisible(1)">Global_Time</include>
        <include condition="Window.IsVisible(1)">Global_Weather</include>
        <!-- Top menu -->
        <control type="grouplist" id="9000">
            <description>Hidden button top menu</description>
            <posx>0</posx>
            <posy>-200</posy>
            <orientation>horizontal</orientation>
            <ondown>50</ondown>
            <control type="button" id="2">
                <description>Viewtype toggle</description>
                <label>-</label>
                <onclick>-</onclick>
            </control>
            <control type="button" id="3">
                <description>Sort toggle</description>
                <label>-</label>
                <onclick>-</onclick>
            </control>
            <control type="togglebutton" id="4">
                <description>Sort asc</description>
                <label>Asc</label>
                <altlabel>Desc</altlabel>
                <onclick>-</onclick>
            </control>
            <control type="radiobutton" id="99">
                <description>Library button</description>
                <label>$LOCALIZE[29800]</label>
                <selected>Window.IsVisible(VideoLibrary)</selected>
                <onclick>ReplaceWindow(VideoFiles)</onclick>
            </control>
        </control>
        <control type="image">
            <description>Top menu background</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>1280</width>
            <height>40</height>
            <texture>special://skin/media/white.png</texture>
            <colordiffuse>dd000000</colordiffuse>
            <animation reversible="false" effect="slide" start="0,-40" end="0,0" easing="out" time="400">visible</animation>
            <animation reversible="false" effect="slide" start="0,0" end="0,-40" easing="out" time="400">hidden</animation>
            <visible>ControlGroup(9000).HasFocus</visible>
        </control>
        <control type="grouplist">
            <description>The visible part of the menu</description>
            <posx>20</posx>
            <posy>10</posy>
            <orientation>horizontal</orientation>
            <itemgap>10</itemgap>
            <animation reversible="false" effect="slide" start="0,-40" end="0,0" easing="out" time="400">visible</animation>
            <animation reversible="false" effect="slide" start="0,0" end="0,-40" easing="out" time="400">hidden</animation>
            <visible>ControlGroup(9000).HasFocus</visible>
            <control type="label"> <!-- 2 -->
                <description>Viewtype toggle unfocused</description>
                <width min="20" max="200">auto</width>
                <label>$INFO[Control.GetLabel(2)]</label>
                <textcolor>white</textcolor>
                <font>Font_Top_Menu</font>
                <visible>!Control.HasFocus(2)</visible>
            </control>
            <control type="label"> <!-- 2 -->
                <description>Viewtype toggle focused</description>
                <width min="20" max="200">auto</width>
                <label>$INFO[Control.GetLabel(2)]</label>
                <textcolor>blue</textcolor>
                <font>Font_Top_Menu</font>
                <visible>Control.HasFocus(2)</visible>
            </control>
            <control type="label"> <!-- 3 -->
                <description>Sort toggle unfocused</description>
                <width min="20" max="200">auto</width>
                <label>$INFO[Control.GetLabel(3)]</label>
                <textcolor>white</textcolor>
                <font>Font_Top_Menu</font>
                <visible>!Control.HasFocus(3)</visible>
            </control>
            <control type="label"> <!-- 3-->
                <description>Sort toggle focused</description>
                <width min="20" max="200">auto</width>
                <label>$INFO[Control.GetLabel(3)]</label>
                <textcolor>blue</textcolor>
                <font>Font_Top_Menu</font>
                <visible>Control.HasFocus(3)</visible>
            </control>
            <control type="label"> <!-- 4 -->
                <description>Sort direction unfocused</description>
                <width min="20" max="200">auto</width>
                <label>$INFO[Control.GetLabel(4)]</label>
                <textcolor>white</textcolor>
                <font>Font_Top_Menu</font>
                <visible>!Control.HasFocus(4)</visible>
            </control>
            <control type="label"> <!-- 4 -->
                <description>Sort direction focused</description>
                <width min="20" max="200">auto</width>
                <label>$INFO[Control.GetLabel(4)]</label>
                <textcolor>blue</textcolor>
                <font>Font_Top_Menu</font>
                <visible>Control.HasFocus(4)</visible>
            </control>
            <control type="label"> <!-- 99 -->
                <description>Library toggle unfocused</description>
                <width min="20" max="200">auto</width>
                <label>$INFO[Control.GetLabel(99)]</label>
                <textcolor>white</textcolor>
                <font>Font_Top_Menu</font>
                <visible>!Control.HasFocus(99)</visible>
            </control>
            <control type="label"> <!-- 99 -->
                <description>Library toggle focused</description>
                <width min="20" max="200">auto</width>
                <label>$INFO[Control.GetLabel(99)]</label>
                <textcolor>blue</textcolor>
                <font>Font_Top_Menu</font>
                <visible>Control.HasFocus(99)</visible>
            </control>
        </control>
        <include condition="!Window.IsVisible(1)">WindowTitleHomeButton</include>
        <include condition="!Window.IsVisible(1)">Clock</include>
        <include condition="Window.IsVisible(1) + Skin.HasSetting(Show_RSS_Everywhere)">RSS_Feed</include>
    </controls>
</window>
