<includes>
    <include name="Launcher_Left_bar">
        <control type="group">
            <visible>Control.IsVisible(517) | Control.IsVisible(518)</visible>
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>450</width>
                <height>720</height>
                <aspectratio>stretch</aspectratio>
                <aligny>center</aligny>
                <texture>special://skin/media/white.png</texture>
                <colordiffuse>55000000</colordiffuse>
            </control>
            <control type="image">
                <posx>448</posx>
                <posy>0</posy>
                <width>2</width>
                <height>720</height>
                <aspectratio>stretch</aspectratio>
                <aligny>center</aligny>
                <texture>special://skin/media/white.png</texture>
                <colordiffuse>5500b8f5</colordiffuse>
            </control>
            <control type="label">
                <description>Console (publisher) + game count</description>
                <posx>38</posx>
                <posy>15</posy>
                <width>370</width>
                <height>30</height>
                <font>Font_Condensed_Bold_Caps_30</font>
                <textcolor>ffdddddd</textcolor>
                <align>left</align>
                <label>$INFO[ListItem.Studio,,:] $INFO[Container.NumItems,[COLOR=ffbbbbbb], $LOCALIZE[31025][/COLOR]]</label>
            </control>
            <control type="image">
                <description>Game screenshot border</description>
                <posx>38</posx>
                <posy>60</posy>
                <width>370</width>
                <height>208</height>
                <texture background="true">special://skin/media/episodeframe.png</texture>
                <colordiffuse>ff00b8f5</colordiffuse>
            </control>
            <control type="image">
                <description>Game screenshot</description>
                <posx>38</posx>
                <posy>60</posy>
                <width>370</width>
                <height>208</height>
                <bordersize>4</bordersize>
                <fadetime>400</fadetime>
                <texture fallback="special://skin/media/nothumb.png" diffuse="special://skin/media/episodematte.png" background="true">$INFO[ListItem.Property(Fanart_Image)]</texture>
            </control>
            <control type="label">
                <description>Game name</description>
                <posx>38</posx>
                <posy>258</posy>
                <width>350</width>
                <height>100</height>
                <wrapmultiline>true</wrapmultiline>
                <aligny>center</aligny>
                <label>$INFO[ListItem.Title]</label>
                <font>Font_Normal_Bold_Caps_24</font>
                <textcolor>ff00b8f5</textcolor>
            </control>
            <control type="textbox">
                <posx>38</posx>
                <posy>343</posy>
                <width>365</width>
                <height>345</height>
                <align>left</align>
                <info>ListItem.Plot</info>
                <font>Font_Normal_20</font>
                <textcolor>white</textcolor>
                <autoscroll delay="7000" time="3000" repeat="10000" />
            </control>
        </control>
    </include>
</includes>
