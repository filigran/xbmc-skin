<window id="0"> <!-- delta window id för Home är 0 -->
    <defaultcontrol always="true">5043</defaultcontrol> <!-- vilken control som ska ha focus från början -->
    <allowoverlay>yes</allowoverlay> <!-- tillåt video/vizualisation att spela i bakgrunden -->
    <controls>
        <control type="button" id="5043">
            <description>Run Recently added</description>
            <posx>-20</posx>
            <posy>-20</posy>
            <width>1</width>
            <height>1</height>
            <label>-</label>
            <font>-</font>
            <onfocus>XBMC.RunScript(script.recentlyadded,totals=True&amp;limit=10)</onfocus>
            <onfocus>SetFocus(300)</onfocus>
            <texturenofocus>-</texturenofocus>
            <texturefocus>-</texturefocus>
            <visible>Skin.HasSetting(Home_Show_RecentlyAdded_Movies) | Skin.HasSetting(Home_Show_RecentlyAdded_TVShows) | Skin.HasSetting(Home_Show_RecentlyAdded_Music)</visible>
        </control>
        <control type="button" id="5043">
            <description>Don't run recently added</description>
            <posx>-20</posx>
            <posy>-20</posy>
            <width>1</width>
            <height>1</height>
            <label>-</label>
            <font>-</font>
            <onfocus>SetFocus(300)</onfocus>
            <texturenofocus>-</texturenofocus>
            <texturefocus>-</texturefocus>
            <visible>!Skin.HasSetting(Home_Show_RecentlyAdded_Movies) + !Skin.HasSetting(Home_Show_RecentlyAdded_TVShows) + !Skin.HasSetting(Home_Show_RecentlyAdded_Music)</visible>
        </control>
