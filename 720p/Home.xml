<window id="0"> <!-- delta window id för Home är 0 -->
    <defaultcontrol always="true">5043</defaultcontrol> <!-- vilken control som ska ha focus från början -->
    <allowoverlay>yes</allowoverlay> <!-- tillåt video/vizualisation att spela i bakgrunden -->
    <backgroundcolor>ff000000</backgroundcolor>
    <controls>
        <control type="button" id="5043">
            <description>Run Recently added</description>
            <posx>-20</posx>
            <posy>-20</posy>
            <width>1</width>
            <height>1</height>
            <label>-</label>
            <font>-</font>
            <onfocus>XBMC.RunScript(script.recentlyadded,totals=True&amp;limit=5)</onfocus>
            <onfocus>SetFocus(300)</onfocus>
            <texturenofocus>-</texturenofocus>
            <texturefocus>-</texturefocus>
            <visible>Skin.HasSetting(Home_Show_RecentlyAdded_Movies) | Skin.HasSetting(Home_Show_RecentlyAdded_TVShows) | Skin.HasSetting(Home_Show_RecentlyAdded_Music)</visible>
        </control>
        <control type="button" id="5043">
            <description>Don't run recently added</description>
            <posx>-20</posx>
            <posy>-20</posy>
            <width>1</width>
            <height>1</height>
            <label>-</label>
            <font>-</font>
            <onfocus>SetFocus(300)</onfocus>
            <texturenofocus>-</texturenofocus>
            <texturefocus>-</texturefocus>
            <visible>!Skin.HasSetting(Home_Show_RecentlyAdded_Movies) + !Skin.HasSetting(Home_Show_RecentlyAdded_TVShows) + !Skin.HasSetting(Home_Show_RecentlyAdded_Music)</visible>
        </control>
        <include>CommonMediaPlayingBackground</include>
        <control type="multiimage">
			<posx>0</posx>
            <posy>0</posy>
            <width>1280</width>
            <height>720</height>
			<randomize>true</randomize>
			<timeperimage>12000</timeperimage>
			<fadetime>1000</fadetime>
			<pauseatend>0</pauseatend>
			<loop>true</loop>
			<aspectratio background="true" aligny="top">scale</aspectratio>
			<imagepath background="true">$INFO[Container(300).ListItem.Thumb]</imagepath>
            <visible>!Player.HasMedia</visible>
			<include>Animation_CommonFade</include>
		</control>		
        <control type="image">
            <description>Fanart overlay</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>1280</width>
            <height>720</height>
            <texture>white.png</texture>
            <colordiffuse>88000000</colordiffuse>
        </control>
        <include>Global_Time</include>
        <include>Global_Weather</include>
        <include>Home_Menu</include>
        <include>Home_RecentlyAdded</include>
        <include>Home_Weather</include>
        <include>RSS_Feed</include>
    </controls>
</window>
